{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@shared": ["src/app/shared/"],
      "@shared/*": ["src/app/shared/*"],
      "@environments": ["src/environments/"],
      "@environments/*": ["src/environments/*"],
      "@root": ["src/app/app-core/"],
      "@root/*": ["src/app/app-core/*"]
    }
  }
}
